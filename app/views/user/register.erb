  <% if @user && @user.errors %>
  <ul>
    <% @user.errors.each do |attr, msg| %>
      <li><%= attr %> <%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="row">
  <div class="col-xs-3 col-md-3 col-lg-3"></div>
  <div class="col-xs-6 col-md-6 col-lg-6">
    <form role="form" action="/user/register" method="post">
    <input type="text" class="form-control" name="user[screen_name]" value="" placeholder="screen_name" required>
     <input type="email" class="form-control" name="user[email]" value="" placeholder="Email" required>
      <input type="password" class="form-control" name="user[password]" placeholder="password" required />

      <input type="submit" class="btn btn-default pull-right" value="Sign Up"/>
    </form>
  </div>
  <div class="col-xs-3 col-md-3 col-lg-3"></div>
</div>

