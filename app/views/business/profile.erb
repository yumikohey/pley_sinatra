<div class="row">
	<div class="col-md-10">
		<h2><%= @biz.name.titleize %></h2>	
		<div class="row">
			<div class="col-md-4">
				<img style="width:300px;"class="biz_food_img img-rounded" src="<%= @result.image_url %>">
			</div>
			<div class="col-md-6 col-md-offset-2">
			<div class="red_score pull-right"><%= @score %></div>
			<div class="clear"></div>
				<%= erb :biz_vio_desc, :locals => { :biz_id => @biz.business_id } %>
			</div>	
		</div>
		
	</div>
</div>

<div class="row">
	
	<div class="col-md-5">
		<%= erb :"business/comment_form", :locals => { :biz_id => @biz.business_id } %>
	</div>

	<div class="col-md-5">
		<%= erb :"business/comments", 
				:locals => { 
					:biz_id => @biz.business_id,
					:site_reviews => @comments,
					:result => @result
				} 
		%>
	</div>
</div>